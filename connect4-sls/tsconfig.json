{
  "compilerOptions": {
    "lib": ["es2020"],
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "sourceMap": true,
    "target": "es2020",
    "outDir": "lib",
    "composite": true
  },
  "include": [
    "./index.ts",
    "./src/**/*.ts",
    // being explicit about what we are specifying to be locations of ts files
  ],
}
